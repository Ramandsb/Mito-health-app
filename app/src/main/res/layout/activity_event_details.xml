    <ImageView
        android:id="@+id/ivMyActivityImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:layout_below="@+id/app_bar"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#503d405b"
        android:layout_alignTop="@+id/ivMyActivityImage"
        android:id="@+id/relativeTitle">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:drawableLeft="@drawable/timerglass"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvMyActivityTime"
            android:textColor="#ffffff"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyActivityType"
                android:text="Horse Riding"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <!--<View-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:layout_toRightOf="@+id/tvMyActivityType"-->
                <!--android:background="#ffffff"-->
                <!--android:id="@+id/viewSperator3"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginLeft="3dp"-->
                <!--android:layout_marginRight="3dp"/>-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/tvMyActivityTitle"-->
                <!--android:text="Join for horse riding"-->
                <!--android:textColor="#ffffff"-->
                <!--android:padding="8dp"-->
                <!--android:layout_toRightOf="@+id/viewSperator3"-->
                <!--android:textSize="10sp"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyActivityDate"
                android:text="21 Oct, 2016 5:30 PM"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvMyActivityType"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Event"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/bg_edit_event"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvMyActivityDate"
                android:id="@+id/ivMyActivityEdit"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeBottomImage"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personwhite"
                android:padding="5dp"
                android:id="@+id/ivMyActivityPeople"
                android:layout_toLeftOf="@+id/tvMyActivityPeople"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                android:padding="7dp"
                android:textSize="16sp"
                android:id="@+id/tvMyActivityPeople"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMyActivityLocation"
                android:text="New Delhi"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/edit_white"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:padding="5dp"-->
            <!--android:id="@+id/ivMyActivityEdit"-->
            <!--android:layout_marginRight="5dp"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:id="@+id/relativeHousefull"
        android:layout_alignTop="@+id/ivMyActivityImage"
        android:background="#503d405b">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="HouseFull"
            android:rotation="-15"
            android:padding="10dp"
            android:background="@drawable/bg_housefull"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:id="@+id/relativeExpired"
        android:layout_alignTop="@+id/ivMyActivityImage"
        android:background="#50000000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Expired"
            android:rotation="-15"
            android:padding="10dp"
            android:background="@drawable/bg_housefull"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeRevert"
        android:layout_below="@+id/ivMyActivityImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:padding="10dp"
            android:id="@+id/lineaFriendRequsts">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeInterested"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#3d405b"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvInterestedFriends"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interested"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/tvInterestedFriends"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeApproved"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textColor="#3d405b"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvApprovedFriends"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:layout_below="@+id/tvApprovedFriends"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#3d405b"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvLeftFriends"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/tvLeftFriends"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeInviteFriends"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/action_invite"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvInviteFriends"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    android:layout_below="@+id/tvInviteFriends"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeJoinFriends"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/join_click"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvJoinFriends"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join"
                    android:maxLines="1"
                    android:id="@+id/tvJoinText"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/tvJoinFriends"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvSelectedPeople"
        android:layout_below="@+id/relativeRevert"
        android:text="Selected People"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSelectedPeople"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvParticipants"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"
        android:src="@drawable/loader"
        />
