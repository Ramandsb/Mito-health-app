<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="in.tagbin.mitohealthapp.PartProfile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativePartProfileMainContent">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:id="@+id/linearPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/userPic1"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic1"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar1"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPartnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:text="Hugh Jackman, 21"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/userPic2"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto1"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic2"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar2"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/userPic3"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto2"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic3"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar3"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/userPic4"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto3"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic4"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar4"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/userPic5"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto4"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic5"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar5"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <ImageView
                            android:id="@+id/userPic6"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto5"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic6"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar6"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/userPic7"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/userpic1" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete_event"
                            android:id="@+id/deletePhoto6"
                            android:visibility="gone"
                            android:layout_alignRight="@+id/userPic7"/>
                        <pl.droidsonroids.gif.GifImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/progressBar7"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:indeterminateTintMode="src_atop"
                            android:visibility="gone"
                            android:src="@drawable/loader"
                            />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvLocationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearPhotos"
                android:layout_marginLeft="10dp"
                android:text="Location"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPartnerLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocationHeading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:editable="false"
                android:ellipsize="end"
                android:hint="Please enter your location"
                android:singleLine="true"
                android:textColor="#474747"
                android:textColorHint="#b7b7b7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvOccupationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPartnerLocation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Occupation"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPartnerOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOccupationHeading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please enter your occupation"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:inputType="textCapSentences"
                android:ellipsize="end"
                android:textColor="#474747"
                android:textColorHint="#b7b7b7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHomeTownHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPartnerOccupation"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Home Town"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPartnerHomeTown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHomeTownHeading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please enter your home town"
                android:textColor="#474747"
                android:selectAllOnFocus="true"
                android:inputType="textCapSentences"
                android:textColorHint="#b7b7b7"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDescriptionHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPartnerHomeTown"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Description (About Me)"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPartnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescriptionHeading"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Please enter something about you"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:inputType="textCapSentences"
                android:ellipsize="end"
                android:textColor="#474747"
                android:textColorHint="#b7b7b7"
                android:textSize="14sp" />

            <com.facebook.login.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/facebook_people_connect"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/etPartnerGender"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:drawableLeft="@drawable/facebook"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:background="#35548f"
                android:textColor="#ffffff"
                fb:confirm_logout="false"
                fb:login_text="Pick from my Facebook profile"
                fb:logout_text="Pick from my Facebook profile" />
        </RelativeLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"
            android:src="@drawable/loader"
            />
    </RelativeLayout>

</ScrollView>
