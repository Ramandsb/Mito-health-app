<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Triceps workout with weights"-->
        <!--android:textColor="@android:color/black"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_margin="10dp"-->
        <!--android:textSize="14sp"-->
        <!--android:id="@+id/tvExerciseDialogName"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearExerciseDialogDetails"
        android:weightSum="2">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:id="@+id/spinnerExerciseIntensity"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/linearExerciseSpeed"
            android:weightSum="2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:id="@+id/etExerciseSpeed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Speed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/linearExerciseTime"
            android:weightSum="2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:selectAllOnFocus="true"
                android:inputType="numberDecimal"
                android:id="@+id/etExerciseTime"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="min"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_below="@+id/linearExerciseDialogDetails"
        android:id="@+id/linearExerciseGradient"
        android:weightSum="2">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:selectAllOnFocus="true"
            android:ems="5"
            android:inputType="numberDecimal"
            android:id="@+id/etExerciseGradient"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Gradient"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearExerciseGradient"
        android:background="#cfcfcf">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:id="@+id/tvExerciseOr"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter calories burnt directly"
            android:textColor="@android:color/black"
            android:layout_below="@+id/tvExerciseOr"
            android:id="@+id/tvExerciseEnterCalories"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvExerciseEnterCalories"
            android:layout_centerHorizontal="true">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:ems="5"
                android:id="@+id/etExerciseCalories"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cal"
                android:layout_margin="13dp"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/etExerciseCalories"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>