<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:id="@+id/downbar"
    android:weightSum="4"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:id="@+id/view1"
            android:background="#FFA0C794"/>
    <ImageView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/icon1"
        android:layout_height="wrap_content"
        android:src="@drawable/people"
        android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:id="@+id/view2"
            android:background="#dedede"
            android:orientation="horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/icon2"
            android:src="@drawable/person"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:id="@+id/view3"
            android:background="#dedede"/>


        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/thirdicon"
            android:padding="10dp"
            android:id="@+id/icon3"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:id="@+id/view4"
            android:background="#dedede"/>

        <ImageView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:id="@+id/icon4"
            android:src="@drawable/cart_final"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        </LinearLayout>
</LinearLayout>










