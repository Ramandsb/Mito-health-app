<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/relativeMain"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22 Oct"
            android:layout_gravity="top"
            android:textSize="18sp"
            android:id="@+id/tvEventListDate"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_weight="1.6"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HORSE RIDING"
                android:textAllCaps="true"
                android:textColor="#3d405b"
                android:id="@+id/tvEventListTitle"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the horse riding event"
                android:textColor="#111111"
                android:maxLines="2"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:layout_below="@+id/tvEventListTitle"
                android:id="@+id/tvEventListDescription"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomorrow 12:00 AM, New Delhi"
                android:textColor="#ababab"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_below="@+id/tvEventListDescription"
                android:id="@+id/tvEventListTimeLocation"
                android:textSize="14sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/relativeAllParticipants"
                android:layout_below="@+id/tvEventListTimeLocation">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cv1"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cv2"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cv1"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/cv3"
                    android:layout_toRightOf="@+id/cv2"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cv4"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cv3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cv5"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cv4"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/cv5"
                    android:id="@+id/tvUsersNumber"
                    android:text="25"
                    android:textColor="#ababab"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relativeAllParticipants"
                android:background="#cacaca"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
