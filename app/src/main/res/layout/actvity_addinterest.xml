<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/ivAddInterestimage"/>
    <TextView
        android:id="@+id/tvAddIneterstNameHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAddInterestimage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Interest Name"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etInterestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAddIneterstNameHeading"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Please enter your interest"
        android:textColor="#474747"
        android:selectAllOnFocus="true"
        android:textColorHint="#b7b7b7"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/buttonSendInterest"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:elevation="10dp"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"
        android:src="@drawable/loader"
        />
</RelativeLayout>