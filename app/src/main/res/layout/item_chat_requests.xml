<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/relativeFriend"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="0dp"
        android:src="@drawable/person"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/picture"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvFriendRequest"
        android:text="Aasaqt has send you a friend request"/>
    <ImageView
        android:id="@+id/ivRequestAccept"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/ivRequestDecline"
        android:src="@drawable/food_accept" />

    <ImageView
        android:id="@+id/ivRequestDecline"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvFriendRequest"
        android:padding="4dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/food_decline" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/picture"/>
</RelativeLayout>